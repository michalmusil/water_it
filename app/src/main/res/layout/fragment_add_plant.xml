<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.plants.addplant.AddPlantFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cz.mendelu.xmusil5.waterit.views.TextInputView
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/plantAttrs_name"
            app:maxChars="255"
            app:maxLines="1"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cz.mendelu.xmusil5.waterit.views.TextInputView
            android:id="@+id/speciesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/plantAttrs_species"
            app:maxChars="255"
            app:maxLines="1"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameInput" />

        <cz.mendelu.xmusil5.waterit.views.TextInputView
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/plantAttrs_description"
            app:maxChars="500"
            app:maxLines="10"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speciesInput" />

        <cz.mendelu.xmusil5.waterit.views.DatePickerView
            android:id="@+id/dateOfPlanting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dateLabel="@string/plantAttrs_datePlanted"

            app:layout_constraintTop_toBottomOf="@id/descriptionInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <cz.mendelu.xmusil5.waterit.views.DatePickerView
            android:id="@+id/lastWatered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dateLabel="@string/plantAttrs_lastWatered"

            app:layout_constraintTop_toBottomOf="@id/dateOfPlanting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/temporaryRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_margin="16dp"

            app:layout_constraintTop_toBottomOf="@+id/lastWatered"
            app:layout_constraintStart_toEndOf="@id/assignRoomButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/assignRoomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/addPlant_assignRoom"
            android:backgroundTint="@color/secondaryColor"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastWatered" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/savePlantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/secondaryColor"
            android:textSize="30sp"
            android:text="@string/action_save"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/assignRoomButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>